<% layout('layouts/boilerplate.ejs')%>

    <h3>Please register here:</h3>
    <form action="/register" method="post" class="validated-form" novalidate>

        <div class="mb-3">
            <label class="form-label" for="username">Username</label>
            <input class="form-control" type="text" id="username" name="username" required>
            <div class="valid-feedback">
                Looks good!!
            </div>
        </div>

        <div class="mb-3">
            <label class="form-label" for="email">Email</label>
            <input class="form-control" type="text" id="email" name="email" required>
            <div class="valid-feedback">
                Looks good!!
            </div>
        </div>
        <div class="mb-3">
            <label class="form-label" for="password">Password</label>
            <input class="form-control" type="text" id="password" name="password" required>
            <div class="valid-feedback">
                Looks good!!
            </div>
        </div>
        <div class="mb-3">
            <label class="form-label" for="dob">DOB</label>
            <input class="form-control" type="dob" id="dob" name="dob" required>
            <div class="valid-feedback">
                Looks good!!
            </div>
        </div>
        <div class="mb-3">
            <label class="form-label" for="password">Gender</label>
            <input class="form-control" type="text" id="gender" name="gender" required>
            <div class="valid-feedback">
                Looks good!!
            </div>
        </div>
        <button class="btn btn-success">Register</button>

    </form>